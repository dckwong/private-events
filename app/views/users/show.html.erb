<% provide(:title, "#{@user.name}") %>
<div class="container cont">
	<h1><%=@user.name%>'s Profile</h1>

	<div>
		<h2>Hosting:</h2>
		<ul>
		<% @user.events.each do |e| %>
			<li><%= link_to e.name, e %></li>
		<% end %>
		</ul>
	</div>

	<div class='col-md-6'>
		<h2>Attending:</h2>
		<ul>
		<% @upcoming_events.each do |e| %>
			<li><%= link_to e.name, e %></li>
		<% end %>
		</ul>
	</div>

	<div class='col-md-6'>
		<h2>Attended:</h2>
		<ul>
		<% @prev_events.each do |e| %>
			<li><%= link_to e.name, e %></li>
		<% end %>
		</ul>
	</div>
</div>
